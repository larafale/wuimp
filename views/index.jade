extends layout

block content

  .container(ng-controller="DefaultController")

    hr
    a(href="https://twitter.com/wuimp", class="twitter-follow-button", data-show-count="false", data-lang="en") Follow
    script function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
    .row

      .span4
        input(id="city", type="textbox", value="")

      .span4
        input(id="place", type="textbox", value="")

    hr
    .row
      .span10
        div(id="map_canvas", style="width:960px; height:250px;")

      .span10
        hr
        a#shareSource.hide(href='https://twitter.com/share=', data-lang='en', data-size="large", data-hashtags='wuimp')
        #share.pull-right
          
        h2 {{place.name}}
        ul.unstyled
          li.list(ng-repeat="media in medias")
            div.well(style="")

              img.img-polaroid(ng-src="{{media.user.profile_picture}}", width="50", style="float:right; position:absolute")
              p.label.label-warning.pull-right {{media.user.full_name}}
              img.img-rounded(ng-src="{{media.images.standard_resolution.url}}")

    hr

  style.

    .list {
      margin-right: 10px;
      width: 314px;
      float: left;
    }

    .list:nth-child(3n){
      margin:0;
    }
  
